<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{> materialize}}
    <title>squirrels_query</title>
</head>

<body>
    {{> navbar}}
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#users">Игроки</a></li>
                <li class="tab col s6"><a href="#clans">Кланы</a></li>
            </ul>
        </div>
        <div id="users" class="col s12">
            <div class="row">
                <div class="input-field col s12">
                  <input id="uid1" type="text" class="validate">
                  <label class="active" for="uid1">uid игрока</label>
                </div>
              </div>
              <button class="btn waves-effect waves-light" type="submit" name="action" id="uid1_submit">Получить
                <i class="material-icons right">send</i>
              </button>
        </div>
        <div id="clans" class="col s12">
            <div class="row">
                <div class="input-field col s12">
                  <input id="uid2" type="text" class="validate">
                  <label class="active" for="uid2">id клана</label>
                </div>
              </div>
              <button class="btn waves-effect waves-light" type="submit" name="action" id="uid2_submit">Получить
                <i class="material-icons right">send</i>
              </button>
        </div>
    </div>
    <script>
        var instance = M.Tabs.init(document.getElementsByClassName('tabs')[0]);
        document.getElementById('uid1_submit').addEventListener('click', function() {
            var uid = document.getElementById('uid1').value;
            if (uid) {
                window.location.href = '/user/' + uid;
            }
        });
        document.getElementById('uid2_submit').addEventListener('click', function() {
            var uid = document.getElementById('uid2').value;
            if (uid) {
                window.location.href = '/clan/' + uid;
            }
        });
    </script>
</body>

</html>